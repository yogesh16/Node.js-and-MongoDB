<% include ./template/header.ejs %>
<div class="container">

    <% include ./template/alert.ejs %>

    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Add New Friend</div>

            </div>

            <div style="padding-top:30px" class="panel-body">

                <form id="addFriend" class="form-horizontal" method="post" role="form" data-bv-message="This value is not valid" data-bv-feedbackicons-valid="glyphicon glyphicon-ok" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

                    <div class="form-group">
                        <div class="controls">
                            <div class="myCon input-group">
                                <span class="input-group-addon" for="username"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="username" type="text" class="form-control" name="username" value=""
                                       required data-bv-notempty-message="Username is required and cannot be empty"
                                       placeholder="Enter your friend's username">
                            </div>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->

                        <div class="col-sm-12 controls">
                            <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>
                                &nbsp Send Request
                            </button>
                        </div>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function($) {
        $('#addFriend').bootstrapValidator();
    });
</script>
<% include ./template/footer.ejs %>